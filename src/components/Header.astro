---
import ThemeToggle from "./ThemeToggle";
import Navigation from "./Navigation.astro";
import IconRss from "../assets/icons/rss.svg";
---

<header
  class="header-margin sticky top-0 z-0 flex items-center justify-between"
>
  <a
    href={import.meta.env.BASE_URL}
    class:list={[
      "text-xl tracking-wider select-none",
      Astro.url.pathname === import.meta.env.BASE_URL ? "text-accent" : "",
    ]}>Huoi</a
  >
  <div class="flex items-center justify-center gap-6">
    <Navigation />

    <div class="flex items-center justify-center gap-4">
      <ThemeToggle client:idle />
      <a href={`${import.meta.env.BASE_URL}/rss.xml`} aria-label="rss" title="rss"
        ><IconRss class="active-foreground size-5" /></a
      >
    </div>
  </div>
</header>
